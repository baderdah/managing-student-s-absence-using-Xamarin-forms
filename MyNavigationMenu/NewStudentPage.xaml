<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MyNavigationMenu.NewStudentPage">
    <StackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="20"
        >
        <Entry
            x:Name="cne"
            Keyboard="Numeric"
            Placeholder="CNE"/>
        <Entry
            x:Name="firstName"
            Keyboard="Default"
            Placeholder="first name"/>
        <Entry
            x:Name="lastName"
            Keyboard="Default"
            Placeholder="last name"/>
        <Entry
            x:Name="email"
            Keyboard="Email"
            Placeholder="Username or Email"/>
        <Entry
            x:Name="phone"
            Placeholder="Phone"
            Keyboard="Telephone"/>
        <Button
            x:Name="createStudentBtn"
            Clicked="createStudentBtn_Clicked"
            Text="Create"
            TextColor="White"
            FontAttributes="Bold"
            BackgroundColor="LightGreen"/>
    </StackLayout>
</ContentPage>
